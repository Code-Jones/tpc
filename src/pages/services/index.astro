---
// Import necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import MainSection from "@components/ui/blocks/MainSection.astro";
import LeftSection from "@components/ui/blocks/LeftSection.astro";
import RightSection from "@components/ui/blocks/RightSection.astro";
import FeaturesStats from "@components/sections/features/FeaturesStats.astro";

// Import necessary images
import blueprints from "@images/blueprints-image.avif";
import personWorking from "@images/person-working.avif";
import beforeAfter from "@images/before-after.avif";
import eddieWelding from "@images/eddie.jpeg";
import pipeInspection from "@images/pipe-inspection.jpg";
import pipelineConstruction from "@images/pipeline-construction.jpg";
import progressBuilding from "@images/progress-building.avif";
import underConstruction from "@images/under-construction.avif";
import { SITE } from "@data/constants";

interface Article {
    isRightSection: boolean;
    title: string;
    subTitle: string;
    btnExists?: boolean;
    btnTitle?: string;
    btnURL?: string;
    single?: boolean;
    img?: any;
    imgAlt?: string;
    imgOne?: any;
    imgOneAlt?: string;
    imgTwo?: any;
    imgTwoAlt?: string;
}

const articles: Article[] = [
    {
        isRightSection: true,
        title: "Delivering Expert Guidance",
        subTitle:
            "Undertaking a project can feel daunting without the right expertise. That’s where our professional consultation services make a difference. With experienced guidance at every stage, you can approach your project with confidence, making well-informed decisions that save time, reduce risks, and ensure success. Whether you're navigating complex regulations, optimizing resources, or refining your project scope, our experts provide tailored solutions to meet your unique needs. From initial planning to final execution, we’re here to help you achieve your goals efficiently and effectively.",
        single: false,
        imgOne: blueprints,
        imgOneAlt: "Blueprints and digital tablet with construction plans.",
        imgTwo: personWorking,
        imgTwoAlt: "Person working in the office",
        btnExists: true,
        btnTitle: "Importance of Experience",
        btnURL: "/about",
    },
    {
        isRightSection: false,
        title: "Bringing Vision to Completion",
        subTitle:
            "Effective project management transforms your plans into tangible results. At Terrace Point Consulting Group, we coordinate every phase of your project, ensuring a seamless transition from concept to completion. With meticulous attention to detail, we streamline workflows, optimize resource allocation, and maintain clear communication with all stakeholders. Our commitment to excellence ensures your project is delivered on time, within budget, and to the highest quality standards.",
        img: beforeAfter,
        imgAlt: "A house in progress, half under construction and half fully built",
        btnExists: true,
        btnTitle: "Project Management Services",
        btnURL: "/services/project-management",
    },
    {
        isRightSection: true,
        title: "Ensuring Safe and Efficient Pipelines",
        subTitle:
            "At Terrace Point Consulting Group, we provide expert pipeline inspection services that prioritize safety and efficiency. Our experienced inspectors utilize the latest technology to assess pipeline integrity, identify potential risks, and ensure compliance with regulatory standards. Whether it’s routine maintenance or emergency inspections, our thorough approach helps prevent costly failures and ensures the long-term reliability of your pipeline infrastructure.",
        single: false,
        imgOne: pipeInspection,
        imgOneAlt: "Pipeline inspectors conducting fieldwork",
        imgTwo: pipelineConstruction,
        imgTwoAlt: "Aerial view of a pipeline under inspection",
        btnExists: true,
        btnTitle: "Pipeline Inspection Services",
        btnURL: "/services/pipeline-inspection",
    },
    {
        isRightSection: false,
        title: "Ensuring Quality and Safety in Welding",
        subTitle:
            "At Terrace Point Consulting Group, we bring unparalleled expertise to the field of welding inspection. With a rich history in welding, our founder ensures our team delivers exceptional inspection services that exceed industry standards. Our welding inspections cover piping, fit checks, hydro testing, and compliance with B31.3 & Z662 pipeline standards, ensuring the structural integrity and safety of your projects.",
        img: eddieWelding,
        imgAlt: "Welding inspector performing an inspection on pipes",
        btnExists: true,
        btnTitle: "Welding Inspection Services",
        btnURL: "/services/welding-inspection",
    },
    {
        isRightSection: true,
        title: "Restoring Ecosystems with Expertise",
        subTitle:
            "At Terrace Point Consulting Group, we specialize in developing effective environmental remediation strategies tailored to each project's unique needs. From soil and groundwater contamination to hazardous waste management, our team employs cutting-edge technologies and methods to address a wide range of environmental challenges. Our goal is to restore sites to their natural state, ensuring compliance with regulatory standards while promoting sustainability.",
        single: false,
        imgOne: progressBuilding,
        imgOneAlt: "Environmental remediation in progress",
        imgTwo: underConstruction,
        imgTwoAlt: "Team working on site remediation",
        btnExists: true,
        btnTitle: "Environmental Remediation Services",
        btnURL: "/services/environmental-remediation",
    },
];

const pageTitle: string = `Services | ${SITE.title}`;
---

<MainLayout
    title={pageTitle}
    structuredData={{
        "@context": "https://schema.org",
        "@type": "WebPage",
        "@id": "https://terracepointconsultinggroup.com/services",
        url: "https://terracepointconsultinggroup.com/services",
        name: "Expert Consultation Services | Terrace Point Consulting Group",
        description:
            "Uniting expertise with your vision, Terrace Point Consulting Group provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
        isPartOf: {
            "@type": "WebSite",
            url: "https://terracepointconsultinggroup.com/",
            name: "Terrace Point Consulting Group",
            description:
                "Uniting expertise with your vision, Terrace Point Consulting Group provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
        },
        inLanguage: "en-US",
    }}
>
    <!--MainSection is the introductory section of the page, it also contains a CTA button-->
    <MainSection
        title="Partnering for Project Excellence"
        subTitle="With over 25 years of expertise, Terrace Point Consulting Group is your trusted partner in delivering exceptional project management, quality assurance, and environmental solutions. From pipeline inspections to reclamation services, we are dedicated to ensuring your projects meet the highest standards of safety, efficiency, and compliance."
        btnExists={true}
        btnTitle="Schedule a Consultation"
        btnURL="/contact"
    />
    <!-- RightSection and LeftSection contain details about various services along with pertinent imagery.
  They alternate for variety in design.
  The 'btnExists' property is used to toggle the display of a button in these sections.
  When btnExists={true}, a button is displayed.
  This can be used to link to more detailed information or related resources.
  RightSection can also conditionally render one or two images based on the 'single' property.
  If 'single' is true, it displays one image, otherwise it displays two.
  -->
    {
        articles.map((article) => {
            return article.isRightSection ? (
                <RightSection
                    title={article.title}
                    subTitle={article.subTitle}
                    single={article.single}
                    imgOne={article.imgOne}
                    imgOneAlt={article.imgOneAlt}
                    imgTwo={article.imgTwo}
                    imgTwoAlt={article.imgTwoAlt}
                    btnExists={article.btnExists}
                    btnTitle={article.btnTitle}
                    btnURL={article.btnURL}
                />
            ) : (
                <LeftSection
                    title={article.title}
                    subTitle={article.subTitle}
                    img={article.img}
                    imgAlt={article.imgAlt}
                    btnExists={article.btnExists}
                    btnTitle={article.btnTitle}
                    btnURL={article.btnURL}
                />
            );
        })
    }
    <!--FeaturesStats section showcases essential stats valuable to users-->
    <FeaturesStats
        title="By the Numbers"
        subTitle="Our commitment to quality and reliability is evident in every project we undertake. At Terrace Point Consulting Group, we are dedicated to delivering industry-leading services that ensure your construction and inspection projects are built to last."
        mainStatTitle="96%"
        mainStatSubTitle="of our clients rate their experience with Terrace Point Consulting Group as exceptional"
        stats={[
            {
                stat: "99.8%",
                description: "project completion rate",
            },
            {
                stat: "5,000+",
                description: "successful inspections and installations",
            },
            {
                stat: "85%",
                description: "client growth year-over-year",
            },
            {
                stat: "25+",
                description: "years of industry expertise",
            },
            {
                stat: "500+",
                description: "km of pipeline inspected completed annually",
            },
        ]}
    />
</MainLayout>
