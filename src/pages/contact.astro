---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import ContactSection from "@components/sections/misc/ContactSection.astro";
import { SITE } from "@data/constants";

const pageTitle: string = `Contact | ${SITE.title}`;
---

<!--Utilizing MainLayout for the outer layout of the page, and defining meta for SEO purposes-->
<MainLayout
  title={pageTitle}
  structuredData={{
    "@context": "https://schema.org",
    "@type": "WebPage",
    "@id": "https://terracepointconsultinggroup.com/contact",
    url: "https://terracepointconsultinggroup.com/contact",
    name: "Expert Consultation Services | Terrace Point Consulting Group",
    description:
      "Uniting expertise with your vision, Terrace Point Consulting Group provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    isPartOf: {
      "@type": "WebSite",
      url: "https://terracepointconsultinggroup.com/",
      name: "Terrace Point Consulting Group",
      description:
        "Uniting expertise with your vision, Terrace Point Consulting Group provides exceptional service and comprehensive solutions in the hardware and construction industry, from consultation to project completion.",
    },
    inLanguage: "en-US",
  }}
>
  <ContactSection />
</MainLayout>
